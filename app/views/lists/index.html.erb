<div class="cover mb-4 d-flex align-items-center justify-content-center bg-primary">
  <div class="text-center text-white">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5 m-0">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
  </div>
  <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary mb-3"%>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
        <div class="card" style="width: 18rem;">
          <img class="card-img-top">
          <div class="card-body">
            <h5 class="card-title"><%= list.name %></h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <%= link_to "See list", list_path(list), class: "btn btn-primary" %>
            <%= link_to "delete", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %>
          </div>
        </div>

          <div class="card-category" data-aos="zoom-in">

          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
